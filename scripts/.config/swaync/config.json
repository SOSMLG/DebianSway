{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "control-center-margin-bottom": 8,
  "control-center-margin-left": 0,
  "control-center-margin-right": 8,
  "control-center-margin-top": 8,
  "control-center-width": 400,
  "control-center-height": 700,
  "fit-to-screen": true,
  "hide-on-action": true,
  "hide-on-clear": false,
  "image-visibility": "when-available",
  "keyboard-shortcuts": true,
  "notification-body-image-height": 100,
  "notification-body-image-width": 200,
  "notification-icon-size": 56,
  "notification-visibility": {
    "spotify": {
      "app-name": "Spotify",
      "state": "transient",
      "urgency": "Low"
    },
    "discord": {
      "app-name": "Discord",
      "state": "transient",
      "urgency": "Low"
    }
  },
  "notification-window-width": 400,
  "positionX": "right",
  "positionY": "top",
  "script-fail-notify": true,
  "scripts": {},
  "timeout": 8,
  "timeout-critical": 0,
  "timeout-low": 5,
  "transition-time": 200,
  "widget-config": {
    "backlight": {
      "device": "amdgpu_bl0",
      "label": "󰃠",
      "min": 5,
      "max": 100
    },
    "buttons-grid": {
      "actions": [
        {
          "active": true,
          "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && nmcli radio wifi on || nmcli radio wifi off'",
          "label": "󰖩",
          "type": "toggle",
          "update-command": "sh -c '[[ $(nmcli radio wifi) == \"enabled\" ]] && echo true || echo false'"
        },
        {
          "active": true,
          "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && bluetoothctl power on || bluetoothctl power off'",
          "label": "󰂯",
          "type": "toggle",
          "update-command": "sh -c '[[ $(bluetoothctl show | grep \"Powered: yes\") ]] && echo true || echo false'"
        },
        {
          "command": "nm-connection-editor",
          "label": "󰛳"
        },
        {
          "command": "pavucontrol",
          "label": "󰕾"
        },
        {
          "command": "firefox",
          "label": "󰈹"
        },
        {
          "command": "thunar",
          "label": "󰉋"
        }
      ]
    },
    "dnd": {
      "text": "󰂛  Do Not Disturb"
    },
    "inhibitors": {
      "text": "󰒲  Inhibitors",
      "button-text": "Clear All",
      "clear-all-button": true
    },
    "label": {
      "max-lines": 1,
      "text": "󱅫  Control Center"
    },
    "menubar": {
      "menu#screenshot": {
        "actions": [
          {
            "command": "swaync-client -cp && flameshot gui",
            "label": "󰩭  Select Region"
          },
          {
            "command": "swaync-client -cp && flameshot screen",
            "label": "󰹑  Full Screen"
          },
          {
            "command": "swaync-client -cp && flameshot launcher",
            "label": "  Flameshot Menu"
          }
        ],
        "label": "󰹑",
        "position": "left"
      },
      "menu#power": {
        "actions": [
          {
            "command": "systemctl suspend",
            "label": "󰤄  Suspend"
          },
          {
            "command": "swaylock.sh",
            "label": "  Lock"
          },
          {
            "command": "loginctl terminate-session ${XDG_SESSION_ID-}",
            "label": "  Logout"
          },
          {
            "command": "systemctl reboot",
            "label": "  Reboot"
          },
          {
            "command": "systemctl poweroff",
            "label": "  Shutdown"
          }
        ],
        "label": "󰐥",
        "position": "right"
      },
      "menu#profiles": {
        "actions": [
          {
            "command": "powerprofilesctl set performance",
            "label": "󱐋  Performance"
          },
          {
            "command": "powerprofilesctl set balanced",
            "label": "  Balanced"
          },
          {
            "command": "powerprofilesctl set power-saver",
            "label": "󰾅  Power Saver"
          }
        ],
        "label": "󰓅",
        "position": "right"
      }
    },
    "mpris": {
      "image-radius": 8,
      "image-size": 80,
      "blur": true
    },
    "title": {
      "button-text": "󰆴  Clear All",
      "clear-all-button": true,
      "text": "Notifications"
    },
    "volume": {
      "label": "󰕾",
      "show-per-app": true
    }
  },
  "widgets": [
    "label",
    "menubar",
    "buttons-grid",
    "volume",
    "backlight",
    "mpris",
    "title",
    "dnd",
    "inhibitors",
    "notifications"
  ]
}
