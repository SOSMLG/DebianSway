# Optimized htop configuration for better monitoring and usability
# Last updated: 2025-01-07
htop_version=3.4.1
config_reader_min_version=3

# Display fields - optimized for system monitoring
# 0=PID, 48=CPU, 17=PRIO, 18=NICE, 38=VIRT, 39=RES, 40=SHR, 2=STATE, 46=%CPU, 47=%MEM, 49=TIME, 1=COMM
fields=0 48 17 18 38 39 40 2 46 47 49 1

# Process filtering - hide system noise, show userland threads
hide_kernel_threads=1
hide_userland_threads=0
hide_running_in_container=0

# User visibility
shadow_other_users=0
show_thread_names=1
show_program_path=1

# Highlighting for better visibility
highlight_base_name=1
highlight_deleted_exe=1
highlight_megabytes=1
highlight_threads=1
highlight_changes=1
highlight_changes_delay_secs=5
shadow_distribution_path_prefix=0

# Command line display
find_comm_in_cmdline=1
strip_exe_from_cmdline=1
show_merged_command=0

# Header and layout
header_margin=1
screen_tabs=1
header_layout=two_50_50

# CPU monitoring
detailed_cpu_time=1
cpu_count_from_one=0
show_cpu_usage=1
show_cpu_frequency=1
show_cpu_temperature=1
degree_fahrenheit=0

# Memory display
show_cached_memory=1
account_guest_in_cpu_meter=0

# Update behavior
update_process_names=1
delay=10

# UI preferences
color_scheme=0
enable_mouse=1
hide_function_bar=0

# Default sorting - by CPU usage
sort_key=46
sort_direction=-1
tree_view=0

# Tree view settings
tree_sort_key=0
tree_sort_direction=1
tree_view_always_by_pid=0
all_branches_collapsed=1

# Main monitoring screen - process list sorted by CPU
screen:Main=PID USER PRIORITY NICE M_VIRT M_RESIDENT M_SHARE STATE PERCENT_CPU PERCENT_MEM TIME Command
.sort_key=PERCENT_CPU
.tree_sort_key=PID
.tree_view_always_by_pid=0
.tree_view=0
.sort_direction=-1
.tree_sort_direction=1
.all_branches_collapsed=1

# I/O monitoring screen - detailed I/O analysis
screen:I/O=PID USER IO_PRIORITY IO_RATE IO_READ_RATE IO_WRITE_RATE PERCENT_SWAP_DELAY PERCENT_IO_DELAY Command
.sort_key=IO_RATE
.tree_sort_key=PID
.tree_view_always_by_pid=0
.tree_view=0
.sort_direction=-1
.tree_sort_direction=1
.all_branches_collapsed=0

# Custom memory monitoring screen
screen:Memory=PID USER PRIORITY M_VIRT M_RESIDENT M_RESIDENT_PERCENT M_SHARE STATE PERCENT_MEM TIME Command
.sort_key=PERCENT_MEM
.tree_sort_key=PID
.tree_view_always_by_pid=0
.tree_view=0
.sort_direction=-1
.tree_sort_direction=1
.all_branches_collapsed=1
